# Contributor: Patrick Jackson <PatrickSJackson gmail com>
# Maintainer: Christoph Vigano <mail@cvigano.de>

pkgname=ava_dmenu
pkgver=4.8.0
pkgrel=1
pkgdesc='A personal compilation of dmenu'
arch=('x86_64')
license=('MIT')
depends=()
provides=('dmenu')
makedepends=('ncurses')
url="http://st.suckless.org"
source=(https://github.com/alexvanaxe/ava_dmenu/archive/master.zip)
sha256sums=('860772c0c9b78481def535266fb3fc36fb2a801e3388ef64eb9d819cef9b6ea1')

prepare() {
  cd $srcdir/ava_dmenu-master
  # skip terminfo which conflicts with nsurses
  sed -i '/tic /d' Makefile
}

build() {
  cd $srcdir/ava_dmenu-master
  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
  cd $srcdir/ava_dmenu-master
  make PREFIX=/usr DESTDIR="$pkgdir" TERMINFO="$pkgdir/usr/share/terminfo" install
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -Dm644 README "$pkgdir/usr/share/doc/$pkgname/README"
}
