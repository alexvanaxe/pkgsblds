# Maintainer: Christoph Vigano <mail@cvigano.de>

pkgname=ava_biblia
pkgver=1.0.0
pkgrel=1
pkgdesc='A cmd bible'
arch=('x86_64')
license=('GNU')
depends=()
provides=('ava_biblia')
makedepends=()
url=""
source=(https://github.com/alexvanaxe/biblia/archive/master.zip)
sha256sums=('854dce7be174ff192d03a42eef827abebbcea010d3aaec16e3bfcb3761adff02')

prepare() {
  cd $srcdir/biblia-master/blb
}

build() {
  cd $srcdir/biblia-master/blb
  make
}

package() {
  cd $srcdir/biblia-master/blb
  make PREFIX=/usr DESTDIR="$pkgdir" install
}
